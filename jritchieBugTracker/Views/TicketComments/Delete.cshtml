@model jritchieBugTracker.Models.CodeFirst.TicketComment

@{
    ViewBag.Title = "Delete";
}

@*<h2>Delete Comment</h2>*@
<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <h4 class="header-title m-t-0 m-b-30">Delete Comment</h4>

                <hr />

                <h5 style="margin-bottom:20px">Are you sure you want to delete this?</h5>

                <div class="form-horizontal">
                    <div class="row">
                        <dl class="dl-horizontal">
                            <dt>
                                <label>Commenter</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Author.Fullname)
                            </dd>
                            <dt>
                                <label>Comment</label>
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Body)
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color col-md-2">
                                <input type="submit" value="Delete" class="btn btn-default" />
                            </div>
                        }
                    </div>

                    <hr />

                    <div class="row" style="text-align:center">
                        <a href="@Url.Action("Details", "Tickets", new { id = Model.TicketId } )"><i class="fa fa-eye"></i><span> Return to Ticket Details </span></a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>