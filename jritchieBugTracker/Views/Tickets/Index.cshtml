@model IEnumerable<jritchieBugTracker.Models.CodeFirst.Ticket>

@{
    ViewBag.Title = "Index";
}


<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <div class="dropdown pull-right">

                    @{
                        if (User.IsInRole("Submitter"))
                        {
                            <a href="@Url.Action("Create")" class="btn btn-default"><i class="fa fa-plus-square"></i><span> New Ticket </span></a>
                        }
                    }

                    @*<a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>*@
                </div>

                <h4 class="header-title m-t-0 m-b-30">Tickets</h4>

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    @*<table id="myTable" class="table">*@
                    <thead>
                        <tr>
                            <th>
                                Ticket Owner
                            </th>
                            <th>
                                Project Name
                            </th>
                            <th>
                                Ticket Name
                            </th>
                            <th>
                                Ticket Description
                            </th>
                            <th>
                                Priority
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Assigned Developer
                            </th>
                            <th>Id</th>
                            <th></th>
                            @*<th>
                                    Ticket Created
                                </th>
                                <th>
                                    Ticket Updated
                                </th>*@
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OwnerUser.Fullname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AssignToUser.Fullname)
                                </td>
                                <td>@item.Id</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "display:block" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "display:block" })
                                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@

                                    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                    {
                                        @*<span> |</span>*@
                                        @Html.ActionLink("Assign Developer", "AssignTicketUser", new { ticketId = item.Id }, new { style = "display:block" })
                                    }
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Updated)
                                    </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- end col -->
    </div>
    <!-- end row -->

</div>
<!-- end container -->




