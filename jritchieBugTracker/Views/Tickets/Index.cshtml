@model IEnumerable<jritchieBugTracker.Models.CodeFirst.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Tickets Index</h2>

@{ 
    if (User.IsInRole("Submitter"))
    {
        <p>
            @Html.ActionLink("Create New Ticket", "Create")
        </p>
    }
}

<table class="table">
    <tr>
        <th>
            Ticket Owner
        </th>
        <th>
            Project Name
        </th>
        <th>
            Ticket Name
        </th>
        <th>
            Ticket Description
        </th>
        <th>
            Priority
        </th>
        <th>
            Status
        </th>
        <th>
            Type
        </th>
        <th>
            Assigned Developer
        </th>
        <th>Id</th>
        <th></th>
        @*<th>
            Ticket Created
        </th>
        <th>
            Ticket Updated
        </th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerUser.Fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignToUser.Fullname)
        </td>
        <td>@item.Id</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@

            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <span> |</span>
                @Html.ActionLink("Assign Developer", "AssignTicketUser", new { ticketId = item.Id } )

            }






        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Updated)
        </td>*@
    </tr>
}

</table>
