@{
    Layout = null;
    ViewBag.Title = "Landing Page";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Issue Management app.">
    <meta name="author" content="J.Ritchie">

    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <title>Resolve()</title>

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/responsive.css" rel="stylesheet" type="text/css" />

    <link href='https://fonts.googleapis.com/css?family=Courgette' rel='stylesheet'>

    <!-- HTML5 Shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <script src="~/assets/js/modernizr.min.js"></script>

</head>

<body>

    <!-- Navigation Bar-->
    <header id="topnav" style="box-shadow:none">
        <div class="topbar-main" style="height:60px">
            <div class="container">

                <!-- LOGO -->
                <div class="topbar-left">
                    <a href="#" class="logo"><span>Resolve<span>()</span></span></a>
                </div>
                <!-- End Logo container-->

            </div>
        </div>
    </header>
    <!-- End Navigation Bar-->

    <div class="wrapper-page">
        <div class="card-box" style="margin-top:120px !important">

            <div class="text-center">
                <a href="#" class="logo"><span>Resolve<span>()</span></span></a>
                <h4 class="text-muted m-t-0 m-b-30 font-600">Issue Management</h4>
            </div>

            <div class="text-center">
                <h4 class="font-bold m-b-0">Sign in using a demo User account:</h4>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a class="btn btn-default" style="width:135px; margin-bottom:4px" href="@Url.Action("DemoLogin", "Account", new { userType = "Admin" } )">Administrator</a>
                        <a class="btn btn-default" style="width:135px; margin-bottom:4px" href="@Url.Action("DemoLogin", "Account", new { userType = "ProjectManager" } )">Project Manager</a>
                    </div>
                    <div class="col-sm-12 text-center">
                        <a class="btn btn-default" style="width:135px; margin-bottom:4px" href="@Url.Action("DemoLogin", "Account", new { userType = "Developer" } )">Developer</a>
                        <a class="btn btn-default" style="width:135px; margin-bottom:4px" href="@Url.Action("DemoLogin", "Account", new { userType = "Submitter" } )">Submitter</a>
                    </div>
                </div>

                <div class="text-muted" style="text-align:center">
                    <a id="rolesModal" data-toggle="modal" data-target="#roles-Modal">
                        What can these Roles do?
                    </a>
                </div>

                <div class="text-center" style="margin-top:14px">
                    <h4 class="font-bold">OR</h4>
                </div>

                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a class="btn btn-default" style="width:135px" href="@Url.Action("Login", "Account")">Login</a>
                    </div>
                </div>

            </div>
            <!-- end panel-body -->
        </div>
        <!-- end card-box-->


        <div class="card-box">
            <p style="text-align:center">
                Resolve() is a Web-based ticketing application built with ASP.NET MVC using C#.
            </p>
            <ul style="margin-left:-14px">
                <li>
                    Code-First SQL Server database implementation using Entity Framework with Authentication and Authorization for user- and role-level security.
                </li>
                <li>
                    LINQ server-side database queries to prevent SQL injection attacks.
                </li>
                <li>
                    Front-end Web pages built with HTML5, CSS, Bootstrap, model binding with Razor, JavaScript, and jQuery.
                </li>
                <li>
                    SMTP Email notifications for Ticket submissions/edits.
                </li>
            </ul>
        </div>

    </div>
    <!-- end wrapper page -->
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    © 2017 — John Ritchie
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->


    <!-- *********************************************************************************** -->
        <!--Roles modal-->
    <div id="roles-Modal" class="modal fade" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">
                        <button type="button" class="close" data-dismiss="modal">
                            <i class="fa fa-times" aria-hidden="true">&nbsp;&nbsp;</i>
                        </button>
                        <br />
                        <div style="background-color:black; margin-top:4px; border-radius:6px; border:1px solid black;  padding:20px 0px">
                            <p style="text-align:center; font-size:20px; color:white">User Roles & Authorizations</p>
                        </div>
                    </div>
                    <div class="modal-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Administrator</th>
                                    <th>Project Manager</th>
                                    <th>Developer</th>
                                    <th>Submitter</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Assign Roles to Users</td>
                                    <td>Yes</td>
                                    <td>No</td>
                                    <td>No</td>
                                    <td>No</td>
                                </tr>

                                <tr>
                                    <td>View Projects
                                    <td>Must be able to view all projects and their own projects separately</td>
                                    <td>Must be able to view all projects and their own projects separately</td>
                                    <td>View only projects they belong to</td>
                                    <td>View only projects they belong to</td>
                                </tr>
                                <tr>
                                    <td>Create Projects</td>
                                    <td>Yes</td>
                                    <td>Yes</td>
                                    <td>No</td>
                                    <td>No</td>
                                </tr>

                                <tr>
                                    <td>Edit Project Name, Details</td>
                                    <td>Yes</td>
                                    <td>Yes</td>
                                    <td>No</td>
                                    <td>No</td>
                                </tr>
                                <tr>
                                    <td>Assign Users to Projects</td>
                                    <td>Yes</td>
                                    <td>Yes</td>
                                    <td>No</td>
                                    <td>No</td>
                                </tr>
                                <tr>
                                    <td>Archive Projects*</td>
                                    <td>Yes</td>
                                    <td>Yes</td>
                                    <td>No</td>
                                    <td>No</td>
                                </tr>
                                <tr>
                                    <td>View Ticket Details</td>
                                    <td>All tickets for all projects</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only tickets they are assigned to</td>
                                    <td>Only tickets they have created</td>
                                </tr>
                                <tr>
                                    <td>Create Tickets</td>
                                    <td>No</td>
                                    <td>No</td>
                                    <td>No</td>
                                    <td>Yes, only for projects they belong to</td>
                                </tr>
                                <tr>
                                    <td>Assign User to Tickets</td>
                                    <td>Yes, only to Developers</td>
                                    <td>Yes, only to Developers</td>
                                    <td>No. Can be assigned tickets by Admin, PM</td>
                                    <td>No. Cannot be assigned tickets</td>
                                </tr>
                                <tr>
                                    <td>Edit Ticket: Type, Title, Description</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only tickets they are assigned to</td>
                                    <td>Only tickets they have created</td>
                                </tr>
                                <tr>
                                    <td>Edit Ticket: Priority</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only tickets they are assigned to</td>
                                    <td>Only tickets they have created</td>
                                </tr>
                                <tr>
                                    <td>Edit Ticket: Status</td>
                                    <td>Yes (back-end may be automated)</td>
                                    <td>Yes (back-end may be automated)</td>
                                    <td>No</td>
                                    <td>No</td>
                                </tr>
                                <tr>
                                    <td>Add Ticket Comment</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only tickets they are assigned to</td>
                                    <td>Only tickets they have created</td>
                                </tr>
                                <tr>
                                    <td>Add Ticket Attachment</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only tickets they are assigned to</td>
                                    <td>Only tickets they have created</td>
                                </tr>
                                <tr>
                                    <td>Edit/Delete Ticket Comment*</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only their own</td>
                                    <td>Only their own</td>
                                </tr>
                                <tr>
                                    <td>Edit/Delete Ticket Attachment*</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only their own</td>
                                    <td>Only their own</td>
                                </tr>
                                <tr>
                                    <td>View Ticket History</td>
                                    <td>Yes</td>
                                    <td>Only tickets for projects they belong to</td>
                                    <td>Only tickets they are assigned to</td>
                                    <td>Only tickets they have created</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <p>* Optional -- may not be implemented at this time.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- jQuery  -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/detect.js"></script>
    <script src="~/assets/js/fastclick.js"></script>

    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/jquery.blockUI.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/wow.min.js"></script>
    <script src="~/assets/js/jquery.nicescroll.js"></script>
    <script src="~/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

</body>
</html>


